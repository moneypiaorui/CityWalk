{
  "compilerOptions": {
    "target": "esnext", 
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src"],  // 确保包含 src 目录
    "types": []
  },
  "include": [
    "src/**/*"
  ]
}
